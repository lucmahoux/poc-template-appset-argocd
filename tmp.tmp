{{- range .Values.teams }}
{{ $team := .name }}
---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: appset-{{ .name }}
  namespace: argocd
spec:
  goTemplate: true
  generators:
    - git:
        repoURL: "{{ $.Values.repositoryUrl }}"
        revision: "{{ $.Values.targetRevision }}"
        directories:
          - path: apps/sbx/{{ $team }}/*
  template:
    metadata:
      name: "{{ $team }}-{{ printf "{{.path.basename}}" }}"
    spec:
      project: default
      source:
        repoURL: "{{ $.Values.repositoryUrl }}"
        targetRevision: "{{ $.Values.targetRevision }}"
        path: "apps/sbx/{{ $team }}/{{ printf "{{.path.basename}}" }}"
        helm:
          valueFiles:
            - values.yaml
      destination:
        server: https://kubernetes.default.svc
        namespace: "sbx-{{ $team }}-{{ printf "{{.path.basename}}" }}"
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
  templatePatch: |
    {{ printf "{{- if hasKey .apps .path.basename }}" }}
    metadata:
      annotations:
        custom.annotation.io/team: test
      {{ printf "{{- toYaml (index .apps .path.basename).annotations | nindent 8 }}" }}
    {{ printf "{{- end }}" }}
{{- end }}
