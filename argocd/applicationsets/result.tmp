---
# Source: appset-alpha/templates/appset-alpha.yaml
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: appset-alpha
  namespace: argocd
spec:
  goTemplate: true
  generators:
    - list:
        elements:
          - name: webapp
            argoName: frontend
            team: alpha
            path: apps/sbx/alpha/webapp
            namespace: sbx-alpha-webapp
            annotations:
              custom.annotation.io/component: web
          - name: billing
            argoName: billing-api
            team: alpha
            path: apps/sbx/alpha/billing
            namespace: sbx-alpha-billing
            annotations:
              custom.annotation.io/component: payment
  template:
    metadata:
      name: "alpha-{{.name}}"
      annotations:
        null
    spec:
      project: default
      source:
        repoURL: "git@github.com:lucmahoux/poc-template-appset-argocd.git"
        targetRevision: "main"
        path: "apps/dev/alpha/{{.path }}"
        helm:
          valueFiles:
            - values.yaml
      destination:
        server: https://kubernetes.default.svc
        namespace: ""
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
